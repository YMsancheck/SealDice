<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mshell" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
        <!--        <item name="textFillColor">@color/black</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/grey_white</item>
        <!-- Customize your theme here. -->
        <item name="seal_settings_icon">@drawable/ic_settings</item>
        <item name="seal_buttonColor">@drawable/btn_select</item>
    </style>

    <style name="Theme.Mshell.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mshell.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">#00000000</item>
    </style>
    <style name="Theme.Mshell.CommonOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">#00000000</item>
    </style>
    <style name="Theme.Mshell.DangerOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:titleTextColor">@color/dark_red</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="colorPrimary">@color/dark_red</item>
        <item name="colorControlNormal">@color/dark_red</item>
        <item name="android:textColorPrimary">@color/dark_red</item>
        <item name="android:textColorSecondary">@color/grey_white</item>
    </style>
    <style name="Theme.Mshell.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.Mshell.DialogOverlay" parent="Theme.AppCompat.Light.Dialog.Alert" >
        <item name="android:background">@color/white</item>
        <item name="android:colorAccent">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
</resources>